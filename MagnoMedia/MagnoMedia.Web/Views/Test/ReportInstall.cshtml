@{
    ViewBag.Title = "Report Install";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .no-gutter > [class*='col-'] {
        padding-right: 0;
        padding-left: 0;
    }
</style>
<link href="../Content/bootstrap/bootstrap-datetimepicker.css" rel="stylesheet" />
<link href="../Content/bootstrap/bootstrap.min.css" rel="stylesheet" />
<script src="../Scripts/Bootstrap/jquery-2.1.1.min.js"></script>
<script src="../Scripts/Bootstrap/bootstrap.min.js"></script>
<script src="../Scripts/Bootstrap/moment-with-locales.js"></script>
<script src="../Scripts/Bootstrap/bootstrap-datetimepicker.js"></script>

<div class="container">
    <div class="panel panel-primary">
        <div class="panel-heading">Installer Installation Report  </div>

        <div class="clearfix"></div>

        <div class="panel-body">

            <div class="row no-gutter ">

                <div class="col-xs-2">
                    <div class="form-group">
                        <label for="inputEmail3" class="col-sm-4 control-label">Status</label>
                        <div class="col-sm-8">
                          @Html.DropDownList("StatusId", (SelectList)(ViewBag.status), new { @class = "form-control", @required="required" })
                        </div>
                    </div>
                </div>
                <div class="col-xs-3">
                    <div class="form-group">
                        <label for="inputEmail3" class="col-sm-4 control-label">Country</label>
                        <div class="col-sm-8">
                             @Html.DropDownList("CountryId", (SelectList)(ViewBag.country), new { @class = "form-control", @required="required" })
                        </div>
                    </div>
                </div>
                <div class="col-xs-3">
                    <label for="inputEmail3" class="col-sm-6 control-label">Start Date</label>
                    <div class="col-sm-6 no-gutter">
                   
                        <div class="form-group no-gutter">
                            <div class='input-group date' id='datetimepicker1'>
                                <input type='text' class="form-control" data-date-format="DD/MMM/YYYY" id="startdate"/>
                                <span class="input-group-addon">
                                    <span class="glyphicon glyphicon-calendar"></span>
                                </span>
                            </div>
                        </div>
                        <script type="text/javascript">
                            $(function () {
                                $('#datetimepicker1').datetimepicker();
                            });
                        </script>
                    </div>
                </div>
                <div class="col-xs-3">
                    <label for="inputEmail3" class="col-sm-6 control-label">End Date</label>
                    <div class="col-sm-6">                      
                          <div class="form-group">
                            <div class='input-group date' id='datetimepicker2'>
                                <input type='text' class="form-control" data-date-format="DD/MMM/YYYY" id="enddate"/>
                                <span class="input-group-addon">
                                    <span class="glyphicon glyphicon-calendar"></span>
                                </span>
                            </div>
                        </div>
                        <script type="text/javascript">
                            $(function () {
                                $('#datetimepicker2').datetimepicker();
                            });
                        </script>
                    </div>
                </div>
                <div class="col-xs-1">
                    <button type="button" class="btn btn-default">Search</button>
                </div>


                @* <div class="alert" role="alert" id="Alertmessage" runat="server" visible="false"></div>*@
            </div>
        </div>
    </div>

    <div class="panel panel-primary">
        <!-- Default panel contents -->
        <div class="panel-heading">
            Report Details      
        <div class="clearfix"></div>
        </div>

        <table class="table">
            <thead>
                <tr>
                    <th>S. No</th>
                    <th>Country</th>
                    <th>Status</th>
                    <th>LP Count</th>
                    <th>Download Count</th>
                </tr>
            </thead>
            <tbody>
               @* @foreach (dynamic item in Model)
                {
                    <tr>
                        <td>@item.Index</td>
                        <td>@item.CountryName</td>
                        <td>@item.State</td>
                        <td>@item.Total</td>
                        <td></td>
                    </tr>
                }*@
            </tbody>
        </table>
    </div>
</div>
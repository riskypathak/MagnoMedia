@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="panel panel-default">
    <div class="panel-heading">Metrics</div>
    <div class="panel-body">
        <div class="panel panel-default col-md-5">
            <div class="panel-body col-md-8">
                @Html.Label("Install Per Download", new { @class = "form-control input-md" })
                
                @Html.Label("(Install/Download)*100", new { @class = "form-control smtext" })
            </div>
            <div class="panel-body col-md-4">
                <br />
                @Html.Raw((String)ViewBag.InstallPerDownload)

            </div>
        </div>
        <div class="col-md-2">
        </div>
        <div class="panel panel-default col-md-5">
            <div class="panel-body col-md-8">
                @Html.Label("Install Per Visit", new { @class = "form-control input-md" })
               
                @Html.Label("(Install/LandingPage)*100", new { @class = "form-control smtext" })
            </div>
            <div class="panel-body col-md-4">
                <br />
                @Html.Raw((String)ViewBag.DownloadPerLP)

            </div>
        </div>

        <div class="panel panel-default col-md-5">
            <div class="panel-body col-md-8">
                @Html.Label("Success Per Install", new { @class = "form-control input-md" })
                
                @Html.Label("(InstallSucess/InstallStart)*100", new { @class = "form-control smtext" })
            </div>
            <div class="panel-body col-md-4">
                <br />
                @Html.Raw((String)ViewBag.SuccessPerInstall)

            </div>
        </div>
        <div class="col-md-2">
        </div>
        <div class="panel panel-default col-md-5">
            <div class="panel-body col-md-8">
                @Html.Label("Success Per Download", new { @class = "form-control input-md" })
               
                @Html.Label("(InstallSucess/Download)*100", new { @class = "form-control smtext" })
            </div>
            <div class="panel-body col-md-4">
                <br />
                @Html.Raw((String)ViewBag.SuccessPerDownload)

            </div>
        </div>

        <div class="panel panel-default col-md-5">
            <div class="panel-body col-md-8">
                @Html.Label("Sucess Per Visit", new { @class = "form-control input-md" })
               
                @Html.Label("(InstallSuccess/LP)*100", new { @class = "form-control smtext" })
            </div>
            <div class="panel-body col-md-4">
                <br />
                @Html.Raw((String)ViewBag.SuccessPerVisit)

            </div>
        </div>
        <div class="col-md-2">
        </div>
        <div class="panel panel-default col-md-5">
            <div class="panel-body col-md-8">
                @Html.Label("Failure Per Install", new { @class = "form-control input-md" })
               
                @Html.Label("(InstallFail/Install)*100", new { @class = "form-control smtext" })
            </div>
            <div class="panel-body col-md-4">
                <br />
                @Html.Raw((String)ViewBag.FailurePerInstall)

            </div>
        </div>
    </div>
</div>

<style>
    .right-lable {
        text-align: right;
    }

    .smtext {
        font-size: 12px;
        font-style: italic;
    }
</style>

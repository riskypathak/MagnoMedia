@model MagnoMedia.Data.Models.ThirdPartyApplication
@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

@using (Html.BeginForm("Add", "thirdpartyapplication", FormMethod.Post, new { @class = "form-horizontal" }))
{
    <h2>Add New Application</h2>
    <div class="form-group">
        <label class="control-label col-sm-2" for="email">Name :</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(e => e.Name, new { @class = "form-control" , @required="required"})
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-sm-2" for="email">Installer Name :</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(e => e.InstallerName, new { @class = "form-control", @required="required" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-sm-2" for="email">Arguments :</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(e => e.Arguments, new { @class = "form-control", @required="required" })
        </div>
    </div>


    <div class="form-group">
        <label class="control-label col-sm-2" for="email">Download Url :</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(e => e.DownloadUrl, new { @class = "form-control" , @required="required"})
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-sm-2" for="email">Url:</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(e => e.Url, new { @class = "form-control" , @required="required"})
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-sm-2" for="email">Country :</label>
        <div class="col-sm-10">
            @Html.ListBox("CountryId", (MultiSelectList)ViewBag.country, new { @class = "form-control", @required="required" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-sm-2" for="email">Browser :</label>
        <div class="col-sm-10">
            @Html.ListBox("BrowserId", (MultiSelectList)ViewBag.browser, new { @class = "form-control", @required="required" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <input type="submit" name="name" class="btn btn-primary" value="Save Changes" />
        </div>
    </div>



}


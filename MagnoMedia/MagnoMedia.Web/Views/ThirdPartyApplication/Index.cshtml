@model IEnumerable<MagnoMedia.Web.DataModel.thirdpartyapplication>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<p>
    @Html.ActionLink("Create New", "Add")
   @Html.ActionLink("Log Off", "LogOff", "User")
</p>
<fieldset>
    <legend>Third Party Application List</legend>
    <table style="width: 50%; text-align: left; padding: 30px">
        <tr>
            <th>
                @Html.DisplayName("Name")
            </th>
            <th>
                @Html.DisplayName("Installer Name")
            </th>
            <th>
                @Html.DisplayName("Arguments")
            </th>
            <th>
                @Html.DisplayName("Download Url")
            </th>
            <th>Action</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td style="width:120px">
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td style="width:150px">
                    @Html.DisplayFor(modelItem => item.InstallerName)
                </td>
                <td style="width:200px">
                    @Html.DisplayFor(modelItem => item.Arguments)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DownloadUrl)
                </td>
               
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) <br />
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
</fieldset>
<style>
    td
    {
        padding-right:20px;
    }
</style>

